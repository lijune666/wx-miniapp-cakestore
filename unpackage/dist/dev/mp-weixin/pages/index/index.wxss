.fixsearch {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}
.unfixsearch {
  position: relative;
}
.fixbar {
  position: fixed;
  top: 114rpx;
  left: 0;
}
.fixitems {
  position: relative;
  top: 114rpx;
}
.slideshow {
  width: 100%;
}
.slideshow .swiper {
  height: 400rpx;
}
.slideshow .swiper image {
  width: 100%;
}
.search {
  background-color: white;
  height: 110rpx;
}
.search .search-bar {
  width: 85%;
  height: 60rpx;
  line-height: 60rpx;
  position: absolute;
  top: 50%;
  left: 30rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  font-size: 22rpx;
  border-radius: 10rpx;
  background-color: #f6f6f6;
  color: #b3b3b3;
  text-align: center;
}
.search .search-icon {
  position: absolute;
  top: 50%;
  right: 30rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 45rpx;
  height: 45rpx;
}
.page-bottom-items {
  height: 936rpx;
}
.page-bottom-items .left-bar {
  float: left;
  width: 20%;
  height: 1441rpx;
  background-color: #f3f3f3;
}
.page-bottom-items .items {
  float: right;
  width: 80%;
}
.page-bottom-items .items .item-title {
  margin-left: 20rpx;
}
.bottom-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  height: 800rpx;
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
  transition: -webkit-transform 0.3s ease-out;
  transition: transform 0.3s ease-out;
  transition: transform 0.3s ease-out, -webkit-transform 0.3s ease-out;
}
.bottom-popup .popup-content {
  padding: 20px;
}
.bottom-popup .popup-content .popup-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}
.bottom-popup .popup-content .popup-body {
  font-size: 14px;
}
.bottom-popup .popup-content .popup-body image {
  width: 200rpx;
  height: 200rpx;
}
.bottom-popup .popup-content .close-popup::after {
  border: none;
  background-color: none;
}
.bottom-popup .popup-content .close-popup:active {
  color: #32c9fc;
}
.bottom-popup .popup-content .close-popup {
  width: 100rpx;
  height: 70rpx;
  position: absolute;
  top: 0;
  right: 0;
  -webkit-tap-highlight-color: transparent;
  color: #000000;
  background-color: #fff;
  color: gray;
}
.bottom-popup .popup-content .add-cart {
  color: white;
  background-color: #32c9fc;
  border-radius: 30rpx;
  font-size: 22rpx;
  width: 200rpx;
  height: 50rpx;
  position: relative;
  top: 50rpx;
}
.show {
  -webkit-transform: translateY(0);
          transform: translateY(0);
}

