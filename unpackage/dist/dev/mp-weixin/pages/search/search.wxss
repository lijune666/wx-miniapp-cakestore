.bottom-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  height: 900rpx;
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
  transition: -webkit-transform 0.3s ease-out;
  transition: transform 0.3s ease-out;
  transition: transform 0.3s ease-out, -webkit-transform 0.3s ease-out;
}
.bottom-popup .popup-content {
  padding: 20px;
}
.bottom-popup .popup-content .popup-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}
.bottom-popup .popup-content .popup-body {
  font-size: 14px;
}
.bottom-popup .popup-content .popup-body image {
  width: 200rpx;
  height: 200rpx;
}
.bottom-popup .popup-content .sizes {
  display: flex;
  flex-wrap: wrap;
}
.bottom-popup .popup-content .sizes .size-box {
  height: 80rpx;
  flex-basis: 25%;
  display: flex;
  align-items: center;
}
.bottom-popup .popup-content .sizes .size-box .single-size {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  text-align: center;
  border: 1rpx solid #bbbbbb;
  border-radius: 10rpx;
  margin-left: 0;
}
.bottom-popup .popup-content .sizes .size-box .single-size-checked {
  color: #32c9fc;
  border: 1rpx solid #32c9fc;
  background-color: rgba(50, 201, 252, 0.1);
}
.bottom-popup .popup-content .close-popup::after {
  border: none;
  background-color: none;
}
.bottom-popup .popup-content .close-popup:active {
  color: #32c9fc;
}
.bottom-popup .popup-content .close-popup {
  width: 100rpx;
  height: 70rpx;
  position: absolute;
  top: 0;
  right: 0;
  -webkit-tap-highlight-color: transparent;
  color: #000000;
  background-color: #fff;
  color: gray;
}
.bottom-popup .popup-content .add-cart {
  color: white;
  background-color: #32c9fc;
  border-radius: 30rpx;
  font-size: 22rpx;
  width: 200rpx;
  height: 50rpx;
  position: relative;
  top: 50rpx;
}
.show {
  -webkit-transform: translateY(0);
          transform: translateY(0);
}

